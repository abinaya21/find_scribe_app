<div class="row">
  <div class="span6 offset3">
    <%= form_for(@service_request) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :date, "Date of Examination" %>
      <%= f.text_field :date %>

      <%= f.label :start_time %>
      <%= f.text_field :start_time %>

      <%= f.label :end_time %>
      <%= f.text_field :end_time %>

      <%= f.label :language %>
      <%= f.select :language, options_for_select([["--Select--", ""], ["English", "English"], ["Tamil", "Tamil"], ["Hindi", "Hindi"]], selected: @service_request.language) %>

      <%= f.label :city, "Location" %>
      <%= f.select :city, options_for_select([["--Select--", ""], ["Chennai", "Chennai"], ["Mumbai", "Mumbai"], ["Delhi", "Delhi"]], selected: @service_request.city) %>

      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>